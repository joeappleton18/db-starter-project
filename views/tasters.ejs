      crossorigin="anonymous"
    />

    <link href="css/album.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    
 <% if (message) {   %> 
  <div class="row justify-content-md-center">
    <div class="alert alert-primary" role="alert">
          <%= message %>
    </div>
  </div>

<% } %>

<h1 class="text-justify"> ğŸ· Wine Tasters ğŸ·  </h1>
<div class="col-md-12 col-md-offset-2  justify-content-center">
  <a role="button" class="btn btn-primary btn-xs" href="/create-taster">Create a new taster</a> 

</div>
  
  <div class="col-md-12 col-md-offset-2">
  
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Twitter</th>
            <th>Tastings#</th>

        </tr>

        <%  
        
          tasters.forEach(taster => {
            
        %>

            <tr>
                <td><%=  taster._id  %></td>
                <td><%=  taster.name  %></td>
                <td><%=  (taster.twitter || "-") %></td>
                <td><%=  taster.tastings  %></td>
                
                <td class="text-center"><a class='btn btn-info btn-xs' href="/tasters/update/<%= taster.id %>" ><span class="glyphicon glyphicon-edit"></span> Edit</a> 
                  <a  href="/tasters/delete/<%= taster.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Del</a></td>
                 
            </tr>
            
         <%  
          });
         %>


       
    </thead>
          
    </table>

     
    </div>
    
  
    <%- include('common/footer') -%>
  </body>
</html>
